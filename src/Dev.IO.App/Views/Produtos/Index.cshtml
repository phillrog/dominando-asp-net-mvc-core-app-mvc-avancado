@model IEnumerable<Dev.IO.App.ViewModels.ProdutoViewModel>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
	<a class="btn btn-info" asp-action="Create">Novo Produto</a>
</p>
<table class="table table-hover">
	<thead class="thead-dark">
		<tr>

			<th>&nbsp;</th>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Fornecedor.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Valor)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Ativo)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<img src="~/imagens/@item.Imagem" alt="@item.Imagem" width="60" height="60"/>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Fornecedor.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Valor)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Ativo)
				</td>
				<td class="text-right">
					<a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><span title="Editar" class="fa fa-search"></span></a>
					<a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><span title="Detalhes" class="fa fa-pen-alt"></span></a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span title="Excluir" class="fa fa-trash"></span></a>
				</td>
			</tr>
		}
	</tbody>
</table>
